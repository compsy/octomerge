{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "bower_components/jquery/dist/jquery.min.js",
      "scripts/github-api.js",
      "scripts/chromereload.js",
      "scripts/storage.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "*://api.github.com/*",
    "http://*/*",
    "https://*/*",
    "background",
    "storage"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://github.com/*"
      ],
      "js": [
        "bower_components/jquery/dist/jquery.min.js",
        "scripts/github-api.js",
        "scripts/storage.js",
        "scripts/location-recognizer.js",
        "scripts/auto-merge-injecter.js",
        "scripts/main.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
